<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <label for="user_name">Name</label>
            <%= f.text_field :name, class: 'form-control book_name', id: 'book_title' %>
          </div>
          <div class="form-group">
            <label for="inputImage">Image</label></br>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
          </div>
          <div class="form-group">
            <label for="user_description">Description</label>
            <%= f.text_field :description, class: 'form-control user_description', id: 'user_description' %>
          </div>
          <%= f.submit 'Update User', class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</main>